<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>


<%= form_for @post html: { class:'editpost' } do |f| %>
  <%=f.label :"Edit Post" %>
  <%=f.text_field :title, :placeholder => "New Title" %>
  <%=f.text_area :content, :placeholder => "New Content" %>
  <%=f.submit :"Edit Post" %>
<% end %>
