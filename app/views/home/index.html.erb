		<!-- // <script src='.js'></script> -->
		<meta charset="UTF-8">
	</head>
	<body>


		<h1>Home#index</h1>
		
		<% if @user != "Not logged in" %>
			<p><%= @user %></p>
			<%= link_to "Log Out", '/logout' %>
		<% else %>
			<p><%= @user %></p>
			<%= link_to "Log In", '/login' %> <br>
			<%= link_to "Sign Up", new_user_path %> <br>
		<% end %>
		

		<%= link_to "Make a Post", new_post_path %> <br>


			<% @post.reverse.each do |x| %>
		<p><%= link_to x.title, x %><%= x.created_at %></p>
			<% end %> 

	</body>
</html>
